<div class="record-list" ng-controller="usersController">
  <h3>Users</h3>
  <%- include('../_flash') %>
  <p class="no-records-text" ng-if="users.length === 0">There are currently no users</p>
  <table ng-if="users.length > 0" class="table projects-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Title</th>
        <th>Projects</th>
      </tr>
    </thead>
    <tbody>
      <tr class="panel-list-item" ng-repeat="user in users">
        <td><a href="/users/{{user._id}}">{{user | fullname}}</a></td>
        <td ng-bind="user.email"></td>
        <td ng-bind="user.title"></td>
        <td></td>
      </tr>
    </tbody>
  </table>
  <a href="#user_modal" class="btn btn-theme" role="button" data-toggle="modal">
    <i class="fa fa-plus"></i> Add new user
  </a>
</div>

<div class="modal fade" id="user_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" aria-label="close" data-dismiss="modal">
          <span aria-hidden="true"><i class="fa fa-times"></i></span>
        </button>
        <h5 class="modal-title">New User</h5>
      </div>
      <form action="/users" method="POST">
        <div class="modal-body form-horizontal">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="form-group row">
            <label for="title" class="col-md-3 control-label">Email</label>
            <div class="col-md-9">
              <input type="email" name="email" class="form-control" required>
            </div>
          </div>
      
          <div class="form-group row">
            <label for="sprint" class="col-md-3 control-label">First name</label>
            <div class="col-md-9">
              <input type="text" name="firstname" class="form-control" required>
            </div>
          </div>
      
          <div class="form-group row">
            <label for="sprint" class="col-md-3 control-label">Last name</label>
            <div class="col-md-9">
              <input type="text" name="lastname" class="form-control" required>
            </div>
          </div>
      
          <div class="form-group row">
            <label for="sprint" class="col-md-3 control-label">Title</label>
            <div class="col-md-9">
              <input type="text" name="title" class="form-control" required>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-theme">Create user</button>
          <button class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- contentFor('title') %>
Projects

<%- contentFor('end') %>

