<div class="main-dashboard">
  <h2 ng-bind="org"></h2>
  <p>Welcome, <%= user.name() %></p>
  <div class="row">
    <div class="col-md-6">
      <div class="panel" ng-controller="issuesController">
        <div class="panel-title">My Issues</div>
        <div class="panel-body">
          <div class="no-records" ng-if="issues.length === 0" ng-cloak>No issues to show</div>
          <table class="panel-table">
            <tr class="panel-tr" ng-repeat="issue in issues">
              <td ng-cloak>{{issue.key}}</td>
              <td><a href="/issues/{{issue.key}}" ng-cloak>{{issue.title}}</a></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="panel" ng-controller="projectsController">
        <div class="panel-title">Projects</div>
        <div class="panel-body">
          <div class="no-records" ng-if="projects.length === 0" ng-cloak>No projects to show</div>
          <ul class="panel-list-group">
            <li class="panel-list-item" ng-repeat="project in projects">
              <a href="/projects/{{project.key}}" ng-cloak>{{project.name}}</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-6">
        <div class="panel">
          <div class="panel-title">Progress</div>
        </div>
      </div>
  </div>
</div>

<%- contentFor('title') %>
Dashboard - Break

<%- contentFor('end') %>
<input type="hidden" value="<%= user._id %>" id="user_id">

