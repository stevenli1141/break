<div ng-app="projects">
  <h2>Projects</h2>
  <% if (projects.length === 0) { %>
    <p class="no-records-text">There are currently no projects</p>
  <% } else { %>
    <table class="projects-table" ng-controller="projectsController">
      <tbody>
        <% for (let i = 0; i < projects.length; ++i) { %>
          <tr class="project-name-row">
            <td><a href="/projects/<%= projects[i].key %>"><%= projects[i].name %></a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  <% } %>
</div>

<%- contentFor('title') %>
Projects
